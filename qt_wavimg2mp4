#!/usr/bin/env python3
import sys
import os
import math
import subprocess
import platform
import re
from PySide6.QtWidgets import (QApplication, QMainWindow, QWidget, QVBoxLayout, 
                             QHBoxLayout, QPushButton, QLineEdit, QLabel, 
                             QFileDialog, QProgressBar, QTextEdit, QComboBox, QCheckBox)
from PySide6.QtCore import QThread, Signal, Qt
from PIL import Image

class VideoWorker(QThread):
    progress = Signal(str)
    finished = Signal(bool, str)

    def __init__(self, audio, image, out_dir, out_name, res, seed_len, bitrate, no_clobber):
        super().__init__()
        self.audio = os.path.abspath(os.path.expanduser(audio))
        self.image = os.path.abspath(os.path.expanduser(image))
        self.out_dir = os.path.abspath(os.path.expanduser(out_dir))
        self.out_name = out_name
        self.res_str = res
        self.seed_str = seed_len
        self.bitrate = bitrate
        self.no_clobber = no_clobber

    def get_safe_path(self, directory, filename):
        base, ext = os.path.splitext(filename)
        path = os.path.join(directory, filename)
        if not self.no_clobber or not os.path.exists(path):
            return path
        
        counter = 0
        while os.path.exists(path):
            path = os.path.join(directory, f"{base}-{counter:03d}{ext}")
            counter += 1
        return path

    def run(self):
        try:
            os.makedirs(self.out_dir, exist_ok=True)
            final_output = self.get_safe_path(self.out_dir, self.out_name)

            # 1. Get Audio Duration
            self.progress.emit("Analyzing audio duration...")
            duration_cmd = ['ffprobe', '-v', 'error', '-show_entries', 'format=duration', '-of', 'default=noprint_wrappers=1:nokey=1', self.audio]
            audio_duration = float(subprocess.check_output(duration_cmd))

            # 2. Res and Image
            with Image.open(self.image) as img:
                if self.res_str == "From Image":
                    w, h = img.size
                else:
                    match = re.match(r"(\d+)\s*[xX]\s*(\d+)", self.res_str)
                    if not match: raise ValueError("Invalid resolution format.")
                    w, h = int(match.group(1)), int(match.group(2))
                
                w, h = (w // 2) * 2, (h // 2) * 2
                img.thumbnail((w, h), Image.Resampling.LANCZOS)
                new_img = Image.new("RGB", (w, h), (0, 0, 0))
                offset = ((w - img.size[0]) // 2, (h - img.size[1]) // 2)
                new_img.paste(img, offset)
                resized_img_path = "temp_resized_image.png"
                new_img.save(resized_img_path)

            # 3. Seed Length
            if self.seed_str == "Guess":
                if audio_duration < 60: s_len = 10
                elif audio_duration < 600: s_len = 60
                else: s_len = 240
            else:
                s_len = int(re.sub(r"[^\d]", "", self.seed_str))

            # 4. Bitrate Validation
            br_match = re.search(r"(\d+)", self.bitrate)
            if not br_match: raise ValueError("Invalid bitrate.")
            final_bitrate = f"{br_match.group(1)}k"

            # 5. Encoding
            self.progress.emit(f"Encoding {s_len}s seed...")
            seed_clip = "temp_seed.mp4"
            subprocess.run(['ffmpeg', '-y', '-loop', '1', '-i', resized_img_path, '-c:v', 'libx264', '-t', str(s_len), '-pix_fmt', 'yuv420p', '-vf', f'scale={w}:{h}', '-preset', 'veryfast', seed_clip], check=True)

            self.progress.emit(f"Finalizing at {final_bitrate}...")
            num_loops = math.ceil(audio_duration / s_len)
            concat_file = "temp_list.txt"
            with open(concat_file, "w") as f:
                for _ in range(num_loops):
                    f.write(f"file '{os.path.abspath(seed_clip)}'\n")

            subprocess.run(['ffmpeg', '-y', '-f', 'concat', '-safe', '0', '-i', concat_file, '-i', self.audio, '-c:v', 'copy', '-c:a', 'aac', '-b:a', final_bitrate, '-shortest', '-t', str(audio_duration), final_output], check=True)

            for tmp in [resized_img_path, seed_clip, concat_file]:
                if os.path.exists(tmp): os.remove(tmp)
            self.finished.emit(True, final_output)

        except Exception as e:
            self.finished.emit(False, str(e))

class MainWindow(QMainWindow):
    def __init__(self):
        super().__init__()
        self.setWindowTitle("Static Video Creator (Ultimate)")
        self.setMinimumWidth(800)
        self.setAcceptDrops(True)
        
        self.audio_exts = {'.wav', '.mp3', '.flac', '.m4a', '.ogg'}
        self.image_exts = {'.jpg', '.jpeg', '.png', '.bmp', '.webp', '.tiff'}
        self.video_exts = {'.mp4', '.mkv', '.mov', '.avi', '.webm'}

        # Main UI Widgets
        self.audio_input = QLineEdit()
        self.image_input = QLineEdit()
        self.dir_input = QLineEdit()
        self.filename_input = QLineEdit()
        
        self.res_dropdown = QComboBox(); self.res_dropdown.setEditable(True)
        self.res_dropdown.addItems(["1920x1080", "3840x2160", "1280x720", "854x480", "640x640", "480x480", "From Image"])
        
        self.seed_dropdown = QComboBox(); self.seed_dropdown.setEditable(True)
        self.seed_dropdown.addItems(["60s", "10s", "30s", "240s", "Guess"])

        self.bitrate_dropdown = QComboBox(); self.bitrate_dropdown.setEditable(True)
        self.bitrate_dropdown.addItems(["128k", "192k", "256k", "320k"])

        self.no_clobber_cb = QCheckBox("No Clobber (Auto-increment name)")
        self.no_clobber_cb.setChecked(True)
        
        self.log_area = QTextEdit(); self.log_area.setReadOnly(True)
        self.progress_bar = QProgressBar()
        
        self.start_btn = QPushButton("Generate Video")
        self.open_folder_btn = QPushButton("Show in Folder")
        self.clear_all_btn = QPushButton("Clear All")
        self.open_folder_btn.setEnabled(False)
        
        self.init_ui()

    def init_ui(self):
        layout = QVBoxLayout()
        layout.addLayout(self._create_row("Audio:", self.audio_input, self.browse_file))
        layout.addLayout(self._create_row("Image:", self.image_input, self.browse_file))
        layout.addLayout(self._create_row("Target Dir:", self.dir_input, self.browse_directory))
        
        settings_layout = QHBoxLayout()
        settings_layout.addWidget(QLabel("Output Name:")); settings_layout.addWidget(self.filename_input)
        settings_layout.addWidget(QLabel("Bitrate:")); settings_layout.addWidget(self.bitrate_dropdown)
        settings_layout.addWidget(QLabel("Res:")); settings_layout.addWidget(self.res_dropdown)
        settings_layout.addWidget(QLabel("Seed:")); settings_layout.addWidget(self.seed_dropdown)
        layout.addLayout(settings_layout)

        layout.addWidget(self.no_clobber_cb)
        
        btn_layout = QHBoxLayout()
        btn_layout.addWidget(self.start_btn)
        btn_layout.addWidget(self.open_folder_btn)
        btn_layout.addWidget(self.clear_all_btn)
        layout.addLayout(btn_layout)

        layout.addWidget(self.progress_bar)
        layout.addWidget(self.log_area)

        cw = QWidget(); cw.setLayout(layout); self.setCentralWidget(cw)

        self.start_btn.clicked.connect(self.start_processing)
        self.open_folder_btn.clicked.connect(self.open_file_manager)
        self.clear_all_btn.clicked.connect(self.reset_fields)

    def _create_row(self, label_text, line_edit, browse_func):
        row = QHBoxLayout()
        lbl = QLabel(label_text); lbl.setFixedWidth(70); row.addWidget(lbl)
        row.addWidget(line_edit)
        bb = QPushButton("Browse"); bb.clicked.connect(lambda: browse_func(line_edit)); row.addWidget(bb)
        rb = QPushButton("âœ•"); rb.setFixedWidth(30); rb.clicked.connect(lambda: line_edit.clear()); row.addWidget(rb)
        return row

    def dragEnterEvent(self, e): e.accept() if e.mimeData().hasUrls() else e.ignore()

    def dropEvent(self, e):
        for url in e.mimeData().urls():
            path = os.path.abspath(os.path.expanduser(url.toLocalFile()))
            ext = os.path.splitext(path)[1].lower()
            if os.path.isdir(path):
                self.dir_input.setText(path)
            elif ext in self.audio_exts:
                self.audio_input.setText(path)
                if not self.dir_input.text().strip(): self.dir_input.setText(os.path.dirname(path))
                if not self.filename_input.text().strip():
                    self.filename_input.setText(os.path.splitext(os.path.basename(path))[0] + ".mp4")
            elif ext in self.image_exts:
                self.image_input.setText(path)
            elif ext in self.video_exts:
                self.filename_input.setText(os.path.basename(path))
                if not self.dir_input.text().strip(): self.dir_input.setText(os.path.dirname(path))
        e.accept()

    def play_finish_sound(self):
        """Plays a system notification sound when the task completes."""
        try:
            if platform.system() == "Windows":
                import winsound
                winsound.MessageBeep()
            elif platform.system() == "Darwin": # macOS
                os.system('afplay /System/Library/Sounds/Glass.aiff')
            else: # Linux
                os.system('beep -f 1000 -l 100 || echo -e "\a"')
        except:
            pass # Fail gracefully if sound drivers are missing

    def reset_fields(self):
        for f in [self.audio_input, self.image_input, self.dir_input, self.filename_input, self.log_area]: f.clear()
        self.res_dropdown.setCurrentIndex(0); self.seed_dropdown.setCurrentIndex(0); self.bitrate_dropdown.setCurrentIndex(0)
        self.progress_bar.setValue(0); self.open_folder_btn.setEnabled(False)

    def browse_file(self, le):
        path, _ = QFileDialog.getOpenFileName(self, "Select File")
        if path:
            le.setText(path)
            if le == self.audio_input:
                if not self.dir_input.text().strip(): self.dir_input.setText(os.path.dirname(path))
                if not self.filename_input.text().strip(): self.filename_input.setText(os.path.splitext(os.path.basename(path))[0] + ".mp4")

    def browse_directory(self, le):
        path = QFileDialog.getExistingDirectory(self, "Select Dir")
        if path: le.setText(path)

    def start_processing(self):
        if not all([self.audio_input.text(), self.image_input.text(), self.dir_input.text(), self.filename_input.text()]):
            self.log_area.setText("All file fields are required."); return
        
        self.start_btn.setEnabled(False); self.progress_bar.setRange(0, 0)
        self.worker = VideoWorker(
            self.audio_input.text(), self.image_input.text(), 
            self.dir_input.text(), self.filename_input.text(), 
            self.res_dropdown.currentText(), self.seed_dropdown.currentText(),
            self.bitrate_dropdown.currentText(), self.no_clobber_cb.isChecked()
        )
        self.worker.progress.connect(self.log_area.append)
        self.worker.finished.connect(self.on_finished)
        self.worker.start()

    def on_finished(self, success, msg):
        self.progress_bar.setRange(0, 100); self.progress_bar.setValue(100 if success else 0)
        self.start_btn.setEnabled(True)
        self.play_finish_sound()
        if success: self.last_output_path = msg; self.open_folder_btn.setEnabled(True); self.log_area.append(f"\n[DONE] {msg}")
        else: self.log_area.append(f"\n[ERROR] {msg}")

    def open_file_manager(self):
        p = self.last_output_path
        if not os.path.exists(p): return
        if platform.system() == "Windows": subprocess.run(['explorer', '/select,', os.path.normpath(p)])
        elif platform.system() == "Darwin": subprocess.run(['open', '-R', p])
        else: subprocess.run(['xdg-open', os.path.dirname(p)])

if __name__ == "__main__":
    app = QApplication(sys.argv); w = MainWindow(); w.show(); sys.exit(app.exec())
